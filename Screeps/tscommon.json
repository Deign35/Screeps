{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "decl/",
        "allowUnreachableCode": false,
        "module": "commonjs",
        "outDir": "build/declared",
        "baseUrl": "src/",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "rootDir": "src/",
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/common/**/*.ts",
        "globalDeclarations/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "objs",
        "dist"
    ]
}